#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Student {
    char name[50];
    int roll;
    int marks;
};

int main() {
    // allocate structure dynamically
    struct Student *s = (struct Student *)malloc(sizeof(struct Student));

    if (s == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }

    // sample input (you can modify as needed)
    strcpy(s->name, "Tina");
    s->roll = 105;
    s->marks = 88;

    // output
    printf("Name: %s | Roll: %d | Marks: %d\n", s->name, s->roll, s->marks);

    // free memory
    free(s);

    return 0;
}
